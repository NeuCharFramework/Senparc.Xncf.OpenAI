COPY Senparc.Threads/Senparc.Threads.csproj 								./Senparc.Threads/Senparc.Threads.csproj 
COPY Senparc.Web.UI/Senparc.Web.UI.csproj 									./Senparc.Web.UI/Senparc.Web.UI.csproj 
